/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Amatic+SC:400,700')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
colorText = #333
colorBackground = #fff
colorLink = #999

body
	background colorBackground
	color colorText
	font-family 'Amatic SC', cursive
	font-weight 400
	text-align center
	a
		color colorLink
		text-decoration none
		&:hover
			color #005b71
	p
		line-height 1.8

.container
	margin auto
	max-width 45em
	overflow hidden
	padding 1em

#tweet
	#text
		font-size 350%
	#name
		font-size 200%
		font-weight 700
		text-align right

#tubular-player
	opacity .05


footer
	max-width 500px
	margin auto
	margin-top 200px
	text-align center
	a
		color lighten(colorLink, 30%)