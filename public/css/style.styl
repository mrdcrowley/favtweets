/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Amatic+SC:400,700')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
colorText = #333
colorBackground = #fff
colorLink = #999

body
	background colorBackground
	color colorText
	font-family 'Amatic SC', cursive
	font-weight 700
	text-align center
	a
		color colorLink
		text-decoration none
		&:hover
			color #005b71
	p
		line-height 1.8

.container
	margin auto
	max-width 45em
	min-width 0
	overflow hidden
	padding 2em
	padding-top 5em

#login
	border-bottom 1px solid lighten(colorText, 80%)
	font-size 350%
	text-align left
	input
		background transparent
		border 0
		font-size 100%
		font-family 'Amatic SC', cursive
		outline 0

#tweet
	#text
		font-size 350%
	#name
		font-size 200%
		font-weight 400
		text-align right

#tubular-player
	opacity .05


footer
	bottom 1em
	left 45%
	max-width 500px
	margin auto
	margin-top 200px
	position absolute
	text-align center
	a
		color lighten(colorLink, 30%)